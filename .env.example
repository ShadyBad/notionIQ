# Notion Configuration
NOTION_API_KEY=your_notion_integration_token_here
NOTION_INBOX_DATABASE_ID=your_inbox_database_id_here
NOTION_WORKSPACE_ID=optional_workspace_id

# Claude/Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-opus-20240229

# Optional: OpenAI Configuration (for comparison/fallback)
OPENAI_API_KEY=optional_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
OUTPUT_DIR=output
DATA_DIR=data

# Processing Settings
BATCH_SIZE=10
MAX_CONTENT_LENGTH=10000
ENABLE_CACHING=true
CACHE_TTL_HOURS=24

# Notion API Settings
NOTION_API_VERSION=2022-06-28
RATE_LIMIT_REQUESTS_PER_SECOND=3

# Security Settings
ENABLE_ENCRYPTION=false
ENCRYPTION_KEY=optional_encryption_key_for_sensitive_data

# Feature Flags
ENABLE_WORKSPACE_SCAN=true
ENABLE_PATTERN_LEARNING=true
ENABLE_AUTO_ORGANIZATION=false
ENABLE_RECOMMENDATIONS_PAGE=true

# Analytics Settings
ENABLE_ANALYTICS=true
TRACK_TIME_SAVED=true
TRACK_ACCURACY=true